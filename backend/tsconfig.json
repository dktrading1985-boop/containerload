{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "src/prisma/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
